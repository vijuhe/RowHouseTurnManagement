<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.Registration">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Tervetuloa käyttämään rivitalojen vuoronhallintasovellusta!" Margin="0, 0, 0, 30" />
            <Entry x:Name="LastName" Keyboard="Text" IsSpellCheckEnabled="False" Placeholder="Sukunimi" />
            <Entry x:Name="StreetAddress" Keyboard="Text" IsSpellCheckEnabled="False" Placeholder="Katuosoite" />
            <Entry x:Name="PostalCode" Keyboard="Numeric" IsSpellCheckEnabled="False" Placeholder="Postinumero" MaxLength="5" Margin="0, 0, 0, 30" />
            <Button Text="Rekisteröidy" Clicked="AddRegistration"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>