<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.Registration">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Tervetuloa käyttämään rivitalojen vuoronhallintasovellusta!" Margin="10, 0, 10, 30" />
            <Entry x:Name="LastName" Keyboard="Text" IsSpellCheckEnabled="False" Placeholder="Sukunimi" TextChanged="CheckFormValidity" 
                   Completed="MoveToStreetAddress"/>
            <Entry x:Name="StreetAddress" Keyboard="Text" IsSpellCheckEnabled="False" Placeholder="Katuosoite" TextChanged="CheckFormValidity" 
                   Completed="MoveToPostalCode"/>
            <Entry x:Name="PostalCode" Keyboard="Numeric" IsSpellCheckEnabled="False" Placeholder="Postinumero" MaxLength="5" 
                   TextChanged="CheckFormValidity" Completed="TryAddRegistration"/>
            <Label x:Name="ErrorMessage" TextColor="Red" />
            <Button x:Name="Register" Text="Rekisteröidy" Clicked="AddRegistration" IsEnabled="False" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>